<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_bg" >

    <RelativeLayout
        android:id="@+id/rel_signed_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="6dp" >

        <TextView
            android:id="@+id/txtv_member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:text="小花"
            android:textColor="#666666"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/txtv_member_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="12:00"
            android:textColor="@color/new_black_three"
            android:textSize="@dimen/text_size_14" />

        <ImageView
            android:id="@+id/imgv_group_sign_state"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/txtv_member_time" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/rel_signed_item"
        android:background="#cccccc" />

</RelativeLayout>